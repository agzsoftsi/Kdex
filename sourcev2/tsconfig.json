{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "dist", 
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strinctFunctionTypes": true,
    "alwaysStrict": true, 
    "removeComments": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test"
  ]
}
